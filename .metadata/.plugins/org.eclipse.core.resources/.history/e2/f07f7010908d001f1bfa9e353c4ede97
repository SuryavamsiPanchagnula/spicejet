package pages;

import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import base.basepage;

public class login extends basepage{
	
	@FindBy(className="css-76zvg2 r-jwli3a r-ubezar") private WebElement loginlink;
	
	@FindBy(className ="css-76zvg2 r-homxoj r-ubezar r-1ozqkpa") private WebElement EmailToggle;
	
	@FindBy(xpath="//div[@class='css-1dbjc4n r-1awozwy r-lfiufh r-116j6us r-rs99b7 r-13awgt0 r-18u37iz']//input[@data-testid='user-mobileno-input-box']") private WebElement enteremail;
	
	@FindBy(xpath ="//div[@class='css-1dbjc4n r-1awozwy r-lfiufh r-116j6us r-rs99b7 r-13awgt0 r-18u37iz']//input[@data-testid='password-input-box-cta']") private WebElement enterpassword;
	
	@FindBy(xpath ="//div[@data-testid='login-cta']") private WebElement loginbutton;
	
	@FindBy(className = "css-76zvg2 r-1ttbpl1 r-2t9rge r-1enofrn r-1bymd8e") private WebElement loginerrortext;
	
	@FindBy(className ="d-none d-lg-block hello") private WebElement loginname;
	
	@FindBy(className = "logout-link-container") private WebElement logout;
	
	public void logintest() throws Exception {
		
		loginlink.click();
		EmailToggle.click();
		enteremail.sendKeys(readProperty("email"));
		enterpassword.sendKeys(readProperty("password"));
		loginbutton.click();
		
	}
	
	
	
	

}
